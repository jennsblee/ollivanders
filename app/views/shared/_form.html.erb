<%= simple_form_for (wand) do |w| %>
  <%= w.input :name %>
  <%= w.input :description %>
  <%= w.input :wood, collection: Wand::WOOD_TYPES %>
  <%= w.input :core, collection: Wand::CORE_TYPES %>
  <%= w.input :price %>
  <%= w.input :size %>
  <%= w.input :photos, as: :file, input_html: { multiple: true } %>
  <%= w.button :submit %>
<% end %>
